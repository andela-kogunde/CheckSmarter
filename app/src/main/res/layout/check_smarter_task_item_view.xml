<?xml version="1.0" encoding="utf-8"?>
<com.andela.checksmarter.views.CheckSmarterTaskItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/icons"
        android:elevation="3dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/taskLabel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/item_margin"
                android:layout_marginEnd="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginTop="@dimen/item_margin"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="M"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/item_margin"
                android:layout_marginEnd="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/item_margin"
                android:layout_toEndOf="@+id/taskLabel"
                android:layout_toRightOf="@+id/taskLabel"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="Mac book charger"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/taskCheck"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/item_margin"
                android:layout_marginTop="@dimen/item_margin"
                android:src="@drawable/checked" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</com.andela.checksmarter.views.CheckSmarterTaskItemView>